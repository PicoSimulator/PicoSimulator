{
  "version": 8,
  "configurePresets": [
    {
      "name": "gcc_debug",
      "displayName": "Debug",
      "description": "PicoSim GCC debug",
      "binaryDir": "${sourceDir}/out/build/${presetName}",
      "cacheVariables": {
        "CMAKE_C_COMPILER": "/usr/bin/gcc-13",
        "CMAKE_CXX_COMPILER": "/usr/bin/g++-13",
        "CMAKE_BUILD_TYPE": "Debug"
      }
    },
    {
      "name": "gcc_release",
      "description": "",
      "displayName": "Release",
      "inherits": [
        "gcc_debug"
      ],
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    }
  ]
}